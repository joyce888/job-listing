<div class="dropdown clearfix pull-right">
    <button class="btn btn-success" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("薪资从高到低", jobs_path(:order => "by_lower_bound"),) %>
        </li>
        <li>
            <%= link_to("薪资从低到高", jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("最新发布", jobs_path ) %>

        </li>
    </ul>
</div>
<br/> <br/><br/>

<table class="table table-sm table-inverse">
   <thead>
       <tr class ="success">
           <td>
               职缺</td>
           <td>薪资下限</td>
           <td>薪资上限</td>
           <td>刊登时间</td>
       </tr>

   </thead>
   <tbody>
       <% @jobs.each do |job| %>
       <tr class="active">
           <td>
               <%= link_to(job.title, job_path(job)) %>
           </td>
           <td>
               <%= job.wage_lower_bound %>
           </td>
           <td >
               <%= job.wage_upper_bound %>
           </td>
           <td>
               <%= job.created_at %>
           </td>
       </tr>
       <% end %>
   </tbody>

</table>
